#!/bin/bash
# Aliases
#

# cd
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."


# ls aliases
if [ "$DISTRO" = "Darwin" ]; then
	alias ls="gls --color=auto"
else
	alias ls="ls --color=auto"
fi

alias la="ls -A"
alias ll="ls -lhAr"

# shortcuts
alias _="sudo"
alias g="git"
alias v="vim"
alias rr="rm -rf"

# ip aliases
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias ipl="ifconfig | grep -Eo 'inet (addr:)?([0-9]*\.){3}[0-9]*' | grep -Eo '([0-9]*\.){3}[0-9]*' | grep -v '127.0.0.1'"

# vim correction alias
alias vi="vim"

alias clock="watch -tcpn.5 'figlet -f big -W \"$(date +%l:%M:%S)\" | toilet -f term --gay | perl -pe \"s,0;1,01,g\"'"
