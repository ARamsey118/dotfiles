#!/bin/bash
# Aliases
#

# cd
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."


# ls aliases
if [ "$DISTRO" != "Darwin" ]; then
	alias ls="ls --color=auto"
fi

alias la="ls -A"
alias ll="ls -lhAr"

# shortcuts
alias _="sudo"
alias g="git"
alias v="vim"
alias rr="rm -rf"
#alias rm="trash"
alias sudo="sudo "
# ip aliases
alias ipdns="dig +short myip.opendns.com @resolver1.opendns.com"
alias ipl="ifconfig | grep -Eo 'inet (addr:)?([0-9]*\.){3}[0-9]*' | grep -Eo '([0-9]*\.){3}[0-9]*' | grep -v '127.0.0.1'"

# vim 
alias vi="vim"
alias vim="vim --servername vim"

alias open="xdg-open"
# call the cs function in ./.functions to ls the new directory
alias cd='cs'
