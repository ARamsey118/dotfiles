# Aliases
#

# cd
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."


# ls aliases
if [ "$DISTRO" = "darwin" ]; then
    alias ls="gls --color=auto"
else
    alias ls="ls --color=auto -N"
fi

[[ "$DISTRO" = "darwin" ]] && alias dircolors="gdircolors"

alias la="ls -A"
alias ll="ls -lhAr"

# shortcuts
alias _="sudo"
alias g="git"
alias v="vim"
alias rr="rm -r"
alias sudo="sudo "
# ip aliases
alias ipdns="dig +short myip.opendns.com @resolver1.opendns.com"
alias ipl="ifconfig | grep -Eo 'inet (addr:)?([0-9]*\.){3}[0-9]*' | grep -Eo '([0-9]*\.){3}[0-9]*' | grep -v '127.0.0.1'"
alias "#"="echo #"

# vim
alias vim="nvim"
alias vi="vim"

[[ "$DISTRO" != "darwin" ]] && alias open="xdg-open &> /dev/null"

# listing cd
alias cd="cdls"

alias py="python"

alias extract="aunpack"

[[ "$DOTFILES_SHELL" == "zsh" ]] && bindkey '^R' history-incremental-search-backward
